{
    "name": "client",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "webpack serve --env port=3000",
        "start:server": "node json-server/server.js",
        "start:dev": "concurrently \"npm start\" \"npm run start:server\"",
        "start:dev:vite": "concurrently vite \"npm run start:server\"",
        "build:prod": "webpack --env mode=production apiUrl=https://blogappserver-sergeypost.b4a.run",
        "build:prod:vite": "vite build",
        "build:dev": "webpack --env mode=development",
        "lint:ts": "eslint \"**/*.{ts,tsx}\"",
        "lint:ts:errors": "eslint --quiet \"**/*.{ts,tsx}\"",
        "lint:ts:fix": "eslint \"**/*.{ts,tsx}\" --fix",
        "lint:scss": "npx stylelint \"**/*.scss\"",
        "lint:scss:fix": "npx stylelint \"**/*.scss\" --fix",
        "prettier": "npx prettier --write **/*.{ts,tsx}",
        "test:unit": "jest --config ./config/jest/jest.config.ts",
        "test:e2e": "npx cypress open",
        "test:ui": "npx loki test",
        "test:ui:approve": "npx loki approve",
        "test:ui:ci": "npx loki --requireReference --verboseRenderer --reactUri https://ornate-froyo-22b468.netlify.app",
        "storybook": "storybook dev -p 6006 -c ./config/storybook",
        "storybook:build": "storybook build -c ./config/storybook",
        "test:ui:report": "npm run visual:report:json && npm run visual:report:html",
        "visual:report:json": "node scripts/generate-visual-json-report.js",
        "visual:report:html": "reg-cli --from .loki/report.json --report reports/ui-report.html",
        "prepare": "husky install",
        "postinstall": "node ./scripts/clear-node-modules-cache.js"
    },
    "keywords": [],
